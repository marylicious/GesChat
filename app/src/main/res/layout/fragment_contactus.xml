<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#c8e1f4"
    android:layout_height="match_parent">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginRight="12dp"
        android:paddingBottom="180dp"
        android:layout_marginLeft="12dp"
        android:background="@color/white"
        android:id="@+id/socialNetworkcard"
        app:cardCornerRadius="50dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

      <android.support.constraint.ConstraintLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_gravity="center"
          android:foregroundGravity="center">

          <TextView
              android:id="@+id/socialNetworktitle"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:paddingVertical="20dp"
              android:text="SOCIAL NETWORKS"
              android:textAlignment="center"
              android:textSize="25sp"
              android:textStyle="bold"
              android:layout_marginTop="20dp"
              app:layout_constraintTop_toTopOf="parent" />


          <GridView
              android:id="@+id/gv_socialnetworks"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_marginVertical="10dp"
              android:columnWidth="100dp"
              android:gravity="center"
              android:horizontalSpacing="10dp"
              android:numColumns="3"
              android:stretchMode="columnWidth"
              android:verticalSpacing="24dp"
              app:layout_constraintTop_toBottomOf="@id/socialNetworktitle"
              tools:layout_editor_absoluteX="0dp">

          </GridView>


      </android.support.constraint.ConstraintLayout>

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginRight="12dp"
        android:paddingBottom="180dp"
        android:layout_marginLeft="12dp"
        android:background="@color/white"
        app:cardCornerRadius="50dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/socialNetworkcard">




            <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingVertical="10dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:textAlignment="center"
                    android:id="@+id/emaildirtitle"
                    app:layout_constraintTop_toTopOf="parent"
                    android:textStyle="bold"
                    android:textSize="15sp"
                    android:text="Email Directory"/>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@id/emaildirtitle"
                    android:id="@+id/emaildir1"
                    android:layout_marginTop="10dp">


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="President"
                        android:layout_marginLeft="20dp"
                        android:textStyle="bold"
                        android:layout_marginRight="20dp"
                        android:layout_marginBottom="10dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="110dp"
                        android:text="luisacisneros@gmail.com" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@id/emaildir1"
                    android:id="@+id/emaildir2"
                    android:layout_marginTop="10dp">


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Coordinator"
                        android:layout_marginLeft="20dp"
                        android:textStyle="bold"
                        android:layout_marginRight="20dp"
                        android:layout_marginBottom="10dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="110dp"
                        android:text="bapssyavaa@gmail.com" />
                </RelativeLayout>




            </android.support.constraint.ConstraintLayout>





    </android.support.v7.widget.CardView>


</android.support.constraint.ConstraintLayout>